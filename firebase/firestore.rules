rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function loggedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return loggedIn() && request.auth.token.role == "super_admin";
    }

    function isAstrologer() {
      return loggedIn() && request.auth.token.role == "astrologer";
    }

    /* USERS */
    match /users/{uid} {
      allow read: if isSuperAdmin() || request.auth.uid == uid;

      // Users can update only when they are the owner and they DO NOT change the role
      allow update: if request.auth.uid == uid &&
        request.resource.data.role == resource.data.role;

      // Only super admin can set role or perform arbitrary writes
      allow write: if isSuperAdmin();
    }

    /* ASTROLOGERS */
    match /astrologers/{uid} {
      // Public profiles
      allow read: if true;

      // Allow the owner to create their profile (first-time setDoc with merge)
      // Prevent setting protected fields
      allow create: if request.auth != null && request.auth.uid == uid &&
        !("verified" in request.resource.data) &&
        !("ratingAvg" in request.resource.data) &&
        !("ratingCount" in request.resource.data);

      // Owner can update profile, but protected fields cannot be changed
      // Missing protected fields are treated as unchanged
      allow update: if request.auth != null && request.auth.uid == uid &&
        (!("verified" in request.resource.data) || request.resource.data.verified == resource.data.verified) &&
        (!("ratingAvg" in request.resource.data) || request.resource.data.ratingAvg == resource.data.ratingAvg) &&
        (!("ratingCount" in request.resource.data) || request.resource.data.ratingCount == resource.data.ratingCount);

      // Only super admins can perform arbitrary writes (delete, etc.)
      allow write: if isSuperAdmin();
    }

    /* APPOINTMENTS */
    match /appointments/{id} {
      allow read: if isSuperAdmin()
        || request.auth.uid == resource.data.userId
        || request.auth.uid == resource.data.astrologerId;

      allow create: if loggedIn()
        && request.resource.data.userId == request.auth.uid;

      allow update: if isSuperAdmin()
        || request.auth.uid == resource.data.userId
        || request.auth.uid == resource.data.astrologerId;

      allow delete: if isSuperAdmin();
    }
  }
}
