rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function loggedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return loggedIn() && request.auth.token.role == "super_admin";
    }

    function isAstrologer() {
      return loggedIn() && request.auth.token.role == "astrologer";
    }

    /* USERS */
    match /users/{uid} {
      allow read: if isSuperAdmin() || request.auth.uid == uid;

      // Users can update only when they are the owner and they DO NOT change the role.
      // Allow the update if `role` is unchanged or if the request omits the field.
      allow update: if request.auth.uid == uid &&
        (
          request.resource.data.role == resource.data.role ||
          !("role" in request.resource.data)
        );

      // Only super admin can set role or perform arbitrary writes
      allow write: if isSuperAdmin();
    }

    /* ASTROLOGERS */
    match /astrologers/{uid} {
      // Public profiles
      allow read: if true;

      // Allow the owner to create their profile (e.g., first-time setDoc with merge)
      // but prevent them from setting protected fields.
      allow create: if request.auth != null && request.auth.uid == uid &&
        !("verified" in request.resource.data) &&
        !("ratingAvg" in request.resource.data) &&
        !("ratingCount" in request.resource.data);

      // Astrologer can update profile only if protected fields are unchanged.
      // Compare new vs existing values to allow updates that don't alter these fields.
      allow update: if request.auth != null && request.auth.uid == uid &&
        request.resource.data.verified == resource.data.verified &&
        request.resource.data.ratingAvg == resource.data.ratingAvg &&
        request.resource.data.ratingCount == resource.data.ratingCount;

      // Only super admins can perform arbitrary writes (delete, etc.)
      allow write: if isSuperAdmin();
    }

    /* APPOINTMENTS */
    match /appointments/{id} {
      allow read: if isSuperAdmin()
        || request.auth.uid == resource.data.userId
        || request.auth.uid == resource.data.astrologerId;

      allow create: if loggedIn()
        && request.resource.data.userId == request.auth.uid;

      allow update: if isSuperAdmin()
        || request.auth.uid == resource.data.userId
        || request.auth.uid == resource.data.astrologerId;

      allow delete: if isSuperAdmin();
    }
  }
}
